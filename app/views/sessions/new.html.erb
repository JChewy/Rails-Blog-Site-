<h1 align='center'>Log in</h1>

		<%= form_for(:session, :html => {class: 'form-horizontal', role: 'form'}) do |session| %>
				<div class = 'form-group'>
					<div class = 'control-label col-sm-2'>
						<%= session.label :email %>
					</div>
					<div class = 'col-sm-8'>
						<%= session.email_field :email, class: 'form-control', placeholder: 'Enter email' %>
					</div>
				</div>
				<div class = 'form-group'>
					<div class = 'control-label col-sm-2'>
						<%= session.label :password %>
					</div>
					<div class = 'col-sm-8'>
						<%= session.password_field :password, class: 'form-control', autocomplete: 'off' %>
					</div>
				</div>		
				<div class = 'form-group'>
					<div class = 'col-sm-offset-2 col-sm-10'>
						<%= session.submit'Log in', class: 'btn btn-primary btn-lg' %>
					</div>
				</div>
		<% end %>

