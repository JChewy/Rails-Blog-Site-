<%= render 'shared/errors', obj: @user %>

<div class = 'row'>
	<div class = 'col-xs-12'>
		<%= form_for(@user, :html => {class: 'form-horizontal', role: 'form'}) do |user| %>
		<div class = 'form-group'>
			<div class = 'control-label col-sm-2'>

				<%= user.label :username %>
			</div>
			<div class = 'col-sm-8'>
				<%= user.text_field :username, class: 'form-control', placeholder: 'Enter Username', autofocus: true %>
			</div>
		</div>
		<div class = 'form-group'>
			<div class = 'control-label col-sm-2'>
				<%= user.label :email %>
			</div>
			<div class = 'col-sm-8'>
				<%= user.email_field :email, class: 'form-control', placeholder: 'Enter email' %>
			</div>
		</div>
		<div class = 'form-group'>
			<div class = 'control-label col-sm-2'>
				<%= user.label :password %>
			</div>
			<div class = 'col-sm-8'>
				<%= user.password_field :password, class: 'form-control', placeholder: 'Enter Password' %>
			</div>
		</div>		
		<div class = 'form-group'>
			<div class = 'col-sm-offset-2 col-sm-10'>
				<%= user.submit(@user.new_record? ? 'Sign Up' : 'Update Account', class: 'btn btn-primary btn-lg') %>
			</div>
		</div>
		<% end %>

		<%= link_to 'Back to articles', articles_path %>
	</div>
</div>